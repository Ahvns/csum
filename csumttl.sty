%%  IDENTIFICATION  %%
%   Provides title page for course summary document class
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{csumttl}[2022/05/06 version 1.00 Course Summary Title page]

%%  Used Packages   %%
\RequirePackage{calc}
\RequirePackage{setspace}
\RequirePackage{xstring}
\RequirePackage{csuminf}
\RequirePackage{ragged2e}
%\RequirePackage{xcolor}

%%  COMMANDS  %%
\newcommand{\@csumname}{}%
\newcommand{\@csumsubject}{}%

\newcommand{\@cttlcourseoptions}{%
  \renewcommand{\@csumname}{Summary~}%
  \renewcommand{\@csumsubject}{%
    %%  CONDITIONAL FOR LECTURER & FACULTY  %%
    \ifx\@lecturer\@empty%
      \ifx\@faculty\@empty%
        \relax%
      \else%
        Written for the course taught%
      \fi%
    \else%
      Written for the course taught%
    \fi%
    %% PRINT LECTURER   %%
    \ifx\@lecturer\@empty%
      \relax%
    \else%
      \space by \@lecturer%
    \fi%
    %% PRINT FACULTY
    \ifx\@faculty\@empty%
      \relax%
    \else%
      \space at \@faculty%
    \fi%
  }%
}%

\newcommand{\@cttlarticleoptions}{%
  \renewcommand{\@csumname}{Article~notes~for~}%
  \renewcommand{\@csumsubject}{%
  %%  CONDITIONAL FOR LECTURER & FACULTY  %%
  \ifx\@lecturer\@empty%
    \ifx\@faculty\@empty%
      \relax%
    \else%
      Written for \@course%
    \fi%
  \else%
    Written for \@course~taught by \@lecturer%
  \fi%
  %% PRINT FACULTY
  \ifx\@faculty\@empty%
    \relax%
  \else%
    ~at \@faculty%
  \fi%
  }%
}%

\newcommand{\titletype}[1]{%
  % Check if input is equal to one of specified options, otherwise revert to default
  \IfStrEqCase{#1}{%
    {course}{\@cttlcourseoptions}%
    {article}{\@cttlarticleoptions}%
  }%
}%

\titletype{course}% initialise

%%  TITLEPAGE   %%
\renewcommand{\maketitle}{\@maketitle}%
\renewcommand{\@maketitle}{%
  \begin{titlepage}%
    \begin{flushright}%
      %% TITLE %%
      \huge%
      \textbf{%
        \@csumname\@course%
        }%
      \vspace{-2.5ex} \\%
      \rule{\widthof{%
        \textbf{\@csumname\@course}%
        }}{1pt} \\%
      \large%
      \vspace{-1ex}%
      \ifx\@coursecode\@empty%
        \relax%
      \else%
        \textsc{\@coursecode}%
        \ifx\@yeartaught\@empty%
          \relax%
        \else%
          ~---~%
        \fi%
      \fi%
      \ifx\@yeartaught\@empty%
        \relax%
      \else%
        \@yeartaught%
      \fi \\%
      %% QUOTE %%
      \ifx\@quote\@empty%
        \relax%
      \else%
        \vfill%
        \begin{center}%
          \begin{minipage}{0.8\textwidth}%
            \singlespacing%
            \rule{\textwidth}{1.5pt}\vspace{0.5\baselineskip} \\%
            \sffamily\centering%
            \textit{``\@quote''} \\%
            \raggedleft\normalsize%
            - \@quoteauthor \\%
            \rule{\textwidth}{1.5pt}%
          \end{minipage}%
        \end{center}%
      \fi%
      %% AUTHOR & COURSE INFO %%
      \vfill%
      \begin{minipage}{0.5\textwidth}%
        \begin{FlushRight}
          \hyphenpenalty=750%
          \singlespacing\small\itshape%
          \@csumsubject%
          %%  SPACING %%
          \ifx\@lecturer\@empty%
            \ifx\@faculty\@empty%
              \relax%
            \else%
              \vspace{-1ex} \\%
            \fi%
          \else%
            \vspace{-1ex} \\%
          \fi%
          \normalsize\normalfont%
          \noindent\rule{\textwidth}{0.4pt} \\%
          \@author \\%
          \ifx\@email\@empty%
            \relax%
          \else%
            \texttt{\@email}%
          \fi%
        \end{FlushRight}%
      \end{minipage}%
    \end{flushright}%
  \end{titlepage}%
  \hyphenpenalty=50%
  \pagenumbering{roman}%
}%
